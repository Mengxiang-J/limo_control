<?xml version="1.0"?>
<launch>
    <!-- 编队参数 -->
    <arg name="center_x" default="0.0" />
    <arg name="center_y" default="0.0" />
    <arg name="radius" default="0.6" /> <!-- 减小半径为0.6m更安全 -->
    <arg name="robot_id" default="1" />
    <arg name="role" default="0" />
    <arg name="alpha" default="0.0" />
    <arg name="kp" default="0.3" /> <!-- 控制增益 -->
    
    <!-- 启动PDE控制器节点 -->
    <node name="pde_formation_node" pkg="pde_formation_control" type="pde_formation_node" output="screen">
        <param name="robot_id" value="$(arg robot_id)" />
        <param name="role" value="$(arg role)" />
        <param name="alpha" value="$(arg alpha)" />
        <param name="center_x" value="$(arg center_x)" />
        <param name="center_y" value="$(arg center_y)" />
        <param name="radius" value="$(arg radius)" />
        <param name="kp" value="$(arg kp)" />
        <param name="control_rate" value="10.0" />
    </node>
</launch>